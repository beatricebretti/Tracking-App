<%= form_with model: training_session, local: true do |f| %>
    <div class="mb-3">
      <%= f.label :date %>
      <%= f.date_field :date, class: 'form-control' %>
    </div>
    <div class="mb-3">
      <%= f.label :activity %>
      <%= f.text_field :activity, class: 'form-control' %>
    </div>
    <div class="mb-3">
      <%= f.label :duration %>
      <%= f.number_field :duration, class: 'form-control', min: 1 %>
    </div>
    <div class="mb-3">
      <%= f.label :description %>
      <%= f.text_area :description, class: 'form-control' %>
    </div>
    <%= f.submit class: 'btn btn-primary' %>
  <% end %>